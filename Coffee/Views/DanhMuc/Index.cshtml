@model IEnumerable<Coffee.Models.DanhMuc>

@{
    ViewBag.Title = "Danh Mục";
}

<h2 class="text-primary fw-bold mb-4"><i class="fas fa-list"></i> Danh Sách Danh Mục</h2>

<div class="mb-3 text-end">
    <a href="@Url.Action("Create")" class="btn btn-success shadow-sm">
        <i class="fas fa-plus"></i> Thêm Danh Mục
    </a>
</div>

<div class="card shadow-sm p-3">
    <div class="table-responsive">
        <table class="table table-hover table-bordered align-middle mb-0 text-center">
            <thead class="table-dark">
                <tr>
                    <th>Mã Danh Mục</th>
                    <th>Tên Danh Mục</th>
                    <th>Mô Tả</th>
                    <th>Hành Động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaDanhMuc</td>
                        <td>@item.TenDanhMuc</td>
                        <td>@item.MoTa ?? "-" </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = item.MaDanhMuc })" class="btn btn-warning btn-sm me-1 mb-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Details", new { id = item.MaDanhMuc })" class="btn btn-info btn-sm me-1 mb-1">
                                <i class="fas fa-eye"></i>
                            </a>
                            @using (Html.BeginForm("Delete", "DanhMuc", FormMethod.Post, new { onsubmit = "return confirm('Bạn có chắc chắn muốn xóa danh mục này không?');", style = "display:inline;" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", item.MaDanhMuc)
                                <button type="submit" class="btn btn-danger btn-sm mb-1">
                                    <i class="fas fa-trash"></i> Xóa
                                </button>
                            }


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .card {
        border-radius: 0.75rem;
        transition: all 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
        transform: scale(1.01);
        transition: all 0.2s ease-in-out;
    }

    .btn-sm {
        transition: all 0.2s ease-in-out;
    }
    .btn-sm:hover {
        transform: translateY(-2px);
        box-shadow: 0 3px 8px rgba(0,0,0,0.2);
    }

    @@media (max-width: 768px) {
        .table-responsive {
            overflow-x: auto;
        }
    }
</style>
