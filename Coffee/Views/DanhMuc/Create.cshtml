@model Coffee.Models.DanhMuc

@{
    ViewBag.Title = "Thêm Danh Mục";
}

<h2 class="text-primary fw-bold mb-4"><i class="fas fa-plus-circle"></i> Thêm Danh Mục</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card shadow-sm p-4 bg-white rounded">
        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

        <!-- Mã Danh Mục -->
        <div class="mb-3 row">
            @Html.LabelFor(model => model.MaDanhMuc, "Mã Danh Mục", new { @class = "col-sm-2 col-form-label fw-semibold" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.MaDanhMuc, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập mã danh mục" } })
                @Html.ValidationMessageFor(model => model.MaDanhMuc, "", new { @class = "text-danger small" })
            </div>
        </div>

        <!-- Tên Danh Mục -->
        <div class="mb-3 row">
            @Html.LabelFor(model => model.TenDanhMuc, "Tên Danh Mục", new { @class = "col-sm-2 col-form-label fw-semibold" })
            <div class="col-sm-10">
                @Html.EditorFor(model => model.TenDanhMuc, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên danh mục" } })
                @Html.ValidationMessageFor(model => model.TenDanhMuc, "", new { @class = "text-danger small" })
            </div>
        </div>

        <!-- Mô Tả -->
        <div class="mb-4 row">
            @Html.LabelFor(model => model.MoTa, "Mô Tả", new { @class = "col-sm-2 col-form-label fw-semibold" })
            <div class="col-sm-10">
                @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control", rows = 3, placeholder = "Nhập mô tả danh mục" })
                @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger small" })
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-primary me-2"><i class="fas fa-save"></i> Lưu</button>
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}

<style>
    body {
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .card {
        transition: all 0.2s ease-in-out;
    }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

    .form-control, .form-select {
        border-radius: 0.375rem;
        border: 1px solid #ced4da;
        padding: 8px 12px;
        font-size: 14px;
    }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            border-color: #0d6efd;
        }

    h2 {
        font-weight: 600;
    }

    .btn-primary {
        transition: all 0.2s ease-in-out;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }
</style>
