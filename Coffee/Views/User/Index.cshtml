@model IEnumerable<Coffee.Models.User>

@{
    ViewBag.Title = "Danh sách người dùng";
}

<div class="container mt-4">
    <h2 class="text-center text-primary mb-4"><i class="fas fa-users"></i> Quản lý Người Dùng</h2>

    <!-- Form tìm kiếm -->
    <div class="row mb-3 justify-content-center">
        <div class="col-md-6">
            @using (Html.BeginForm("Index", "User", FormMethod.Get))
            {
                <div class="input-group shadow-sm">
                    <input type="text" name="search" value="@Request.QueryString["search"]" class="form-control" placeholder="🔍 Nhập tên, email, số điện thoại..." />
                    <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Tìm kiếm</button>
                </div>
            }
        </div>
    </div>

    <!-- Bảng hiển thị danh sách người dùng -->
    <div class="table-responsive shadow-sm rounded">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark text-center">
                <tr>
                    <th>Ảnh đại diện</th>
                    <th>Tên đăng nhập</th>
                    <th>Họ tên</th>
                    <th>Email</th>
                    <th>Điện thoại</th>
                    <th>Vai trò</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr class="align-middle">
                        <td class="text-center">
                            <img src="@user.Avatar" alt="Avatar" class="rounded-circle" width="50" height="50" />
                        </td>
                        <td>@user.Username</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Phone</td>
                        <td class="text-center">
                            <span class="badge @(user.Role == "Admin" ? "bg-danger" : "bg-success")">@user.Role</span>
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Edit", new { id = user.UserID })" class="btn btn-warning btn-sm me-1">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a href="@Url.Action("Delete", new { id = user.UserID })" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    /* Table hover */
    table tbody tr:hover {
        background-color: #f1f5f9;
        transform: translateX(2px);
        transition: all 0.2s ease-in-out;
    }

    /* Input tìm kiếm */
    .input-group .form-control {
        border-radius: 0.375rem 0 0 0.375rem;
    }

    .input-group .btn {
        border-radius: 0 0.375rem 0.375rem 0;
    }

    /* Badge role */
    .badge {
        font-size: 0.9rem;
        padding: 0.4em 0.6em;
    }
</style>
