@model Coffee.Models.User

<h2 class="text-center my-4 text-coffee fw-bold">👤 Thông Tin Cá Nhân</h2>

<div class="card mx-auto shadow-lg" style="max-width: 500px; border-radius: 15px; overflow: hidden;">
    <div class="card-header bg-coffee text-white text-center">
        <h5 class="mb-0 fw-bold">Thông tin cá nhân</h5>
    </div>
    <div class="card-body text-center">
        <!-- Avatar -->
        <div class="avatar-preview mx-auto mb-3">
            <img src="@Model.Avatar" class="rounded-circle border border-3 border-light shadow-sm"
                 alt="Avatar" style="width: 140px; height: 140px; object-fit: cover;">
        </div>

        <h4 class="card-title fw-bold">@Model.FullName</h4>
        <p class="mb-1"><i class="fas fa-envelope me-2"></i> @Model.Email</p>
        <p class="mb-1"><i class="fas fa-phone me-2"></i> @Model.Phone</p>
        <p class="mb-3"><i class="fas fa-home me-2"></i> @Model.Address</p>

        <a href="@Url.Action("EditProfiles", "User")" class="btn btn-coffee btn-lg px-4 fw-semibold">
            ✏️ Chỉnh sửa
        </a>
    </div>
</div>

<style>
    .text-coffee { color: #6b4226; }
    .bg-coffee { background-color: #6b4226; }

    .btn-coffee {
        background-color: #6b4226;
        color: #fff;
        border-radius: 10px;
        transition: all 0.3s ease;
        font-weight: 500;
    }

    .btn-coffee:hover {
        background-color: #4d2c18;
        transform: translateY(-2px);
    }

    .avatar-preview img {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .avatar-preview img:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(0,0,0,0.25);
    }

    @@media (max-width: 576px) {
        .card { margin: 15px; }
        .btn-coffee { width: 100%; }
    }
</style>
