@model Coffee.Models.ChangePasswordViewModel

@{
    ViewBag.Title = "Đổi Mật Khẩu";
}

<div class="change-password-container">
    <div class="change-password-box shadow-lg">
        <h2 class="text-center mb-4" style="color:#6b4226; font-weight:600;">
            🔐 Đổi Mật Khẩu
        </h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["ErrorMessage"]</div>
        }

        @using (Html.BeginForm("ChangePassword", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label class="form-label fw-bold"><i class="fas fa-key me-1"></i> Mật khẩu hiện tại</label>
                @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu hiện tại" })
                @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                <label class="form-label fw-bold"><i class="fas fa-lock me-1"></i> Mật khẩu mới</label>
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu mới" })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-4">
                <label class="form-label fw-bold"><i class="fas fa-lock me-1"></i> Xác nhận mật khẩu mới</label>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", placeholder = "Nhập lại mật khẩu mới" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>

            <button type="submit" class="btn btn-coffee btn-lg w-100">
                🔄 Đổi mật khẩu
            </button>
        }
    </div>
</div>

<style>
    body {
        background: url('/Content/images/bg-coffee.jpg') no-repeat center center fixed;
        background-size: cover;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .change-password-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 15px;
    }

    .change-password-box {
        background: rgba(255, 250, 245, 0.95);
        padding: 40px 30px;
        border-radius: 15px;
        width: 100%;
        max-width: 450px;
        text-align: center;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .change-password-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 25px rgba(0,0,0,0.3);
        }

    .form-control {
        height: 45px;
        font-size: 15px;
        border-radius: 8px;
        border: 1px solid #d1a77c;
        transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

        .form-control:focus {
            border-color: #6b4226;
            box-shadow: 0 0 5px rgba(107,66,38,0.5);
            outline: none;
        }

    .btn-coffee {
        background-color: #6b4226;
        color: #fff;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .btn-coffee:hover {
            background-color: #4d2c18;
            transform: translateY(-2px);
        }

    .alert {
        border-radius: 10px;
        font-weight: 500;
    }

    @@media (max-width: 576px) {
        .change-password-box {
            padding: 30px 20px;
        }
    }
</style>
