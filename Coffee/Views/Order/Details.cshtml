@model Coffee.Models.Order

@{
    ViewBag.Title = "Chi tiết đơn hàng";
    var orderDetails = ViewBag.OrderDetails as List<Coffee.Models.OrderDetail>;
}

<div class="container mt-5">
    <h2 class="fw-bold text-primary mb-4">📦 Chi tiết đơn hàng #@Model.OrderID</h2>

    <!-- Thông tin khách hàng & đơn hàng -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title text-dark fw-bold mb-3">👤 Thông tin khách hàng</h5>
            <p><strong>Khách hàng:</strong> @Model.User.FullName</p>
            <p><strong>Số điện thoại:</strong> @Model.User.Phone</p>
            <p><strong>Ngày đặt:</strong> @(Model.OrderDate?.ToString("dd/MM/yyyy HH:mm") ?? "Chưa có dữ liệu")</p>
            <p><strong>Tổng tiền:</strong> <span class="text-danger fw-bold">@String.Format("{0:N0} VNĐ", Model.TotalAmount)</span></p>
            <p>
                <strong>Trạng thái:</strong>
                <span class="badge @GetStatusColor(Model.Status) px-3 py-2 fs-6">@GetStatusText(Model.Status)</span>
            </p>
        </div>
    </div>

    <!-- Form cập nhật trạng thái -->
    <div class="card shadow-sm mb-4 border-primary">
        <div class="card-body">
            <h5 class="card-title text-dark fw-bold mb-3">⚙️ Cập nhật trạng thái đơn hàng</h5>
            <form method="post" action="@Url.Action("UpdateStatus", "Order")" class="d-flex flex-column flex-sm-row gap-2 align-items-center">
                <input type="hidden" name="id" value="@Model.OrderID" />
                <select name="status" class="form-select w-50">
                    <option value="Chưa giao" @(Model.Status == "Chưa giao" ? "selected" : "")>Chưa giao</option>
                    <option value="Dang giao" @(Model.Status == "Đang giao" ? "selected" : "")>Đang giao</option>
                    <option value="Da giao" @(Model.Status == "Đã giao" ? "selected" : "")>Đã giao</option>
                    <option value="Giao hang that bai" @(Model.Status == "Giao hàng thất bại" ? "selected" : "")>Giao hàng thất bại</option>
                </select>
                <button type="submit" class="btn btn-primary px-4">💾 Lưu thay đổi</button>
            </form>
        </div>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h5 class="card-title fw-bold text-dark mb-3">🛍️ Sản phẩm trong đơn hàng</h5>
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="text-center">#</th>
                        <th>Tên sản phẩm</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-end">Đơn giá</th>
                        <th class="text-end">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @if (orderDetails != null && orderDetails.Any())
                    {
                        var index = 1;
                        foreach (var item in orderDetails)
                        {
                            <tr>
                                <td class="text-center">@index</td>
                                <td>@item.Product.Name</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@String.Format("{0:N0} VNĐ", item.Price)</td>
                                <td class="text-end">@String.Format("{0:N0} VNĐ", item.Price * item.Quantity)</td>
                            </tr>
                            index++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted py-3">Không có sản phẩm nào trong đơn hàng.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Nút quay lại -->
    <div class="mt-4">
        <a href="@Url.Action("Index", "Order")" class="btn btn-secondary">
            ⬅️ Quay lại danh sách
        </a>
    </div>
</div>

@functions {
    public string GetStatusColor(string status)
    {
        switch (status)
        {
            case "Chua giao": return "bg-secondary text-white";
            case "Dang giao": return "bg-warning text-dark";
            case "Da giao": return "bg-success text-white";
            case "Giao hang that bai": return "bg-danger text-white";
            default: return "bg-secondary text-white";
        }
    }

    // 🧩 Hàm đổi sang tiếng Việt
    public string GetStatusText(string status)
    {
        switch (status)
        {
            case "Chua giao": return "Chưa giao";
            case "Dang giao": return "Đang giao";
            case "Da giao": return "Đã giao";
            case "Giao hang that bai": return "Giao hàng thất bại";
            default: return status;
        }
    }
}


<style>
    .card {
        border-radius: 12px;
    }

    h2, h5 {
        font-family: 'Segoe UI', sans-serif;
    }

    table th, table td {
        vertical-align: middle;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: 0.2s;
    }

    .btn-primary {
        border-radius: 8px;
    }

    .btn-secondary {
        border-radius: 8px;
    }
</style>
