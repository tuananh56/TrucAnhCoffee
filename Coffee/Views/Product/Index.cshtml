@model IEnumerable<Coffee.Models.Product>

@{
    ViewBag.Title = "Sản phẩm";
}

<div class="container mt-5">
    <h2 class="text-center text-coffee fw-bold mb-4">🛒 Danh sách sản phẩm</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center fs-5">
            <i class="fas fa-exclamation-circle me-2"></i> Không tìm thấy sản phẩm nào!
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card shadow-sm border-0 rounded-4 overflow-hidden h-100 product-card">
                        <div class="position-relative overflow-hidden">
                            @* Badge mới hoặc giảm giá *@
                            @*<span class="badge bg-danger position-absolute top-0 start-0 m-2">SALE</span>*@
                            <a href="@Url.Action("Details", "Product", new { id = item.ProductID })">
                                <img src="@item.ImageURL" class="card-img-top product-img" alt="@item.Name">
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold text-truncate mb-2">@item.Name</h5>
                            <p class="card-text text-danger fw-bold fs-5 mb-3">@String.Format("{0:N0} VNĐ", item.Price)</p>

                            <div class="mt-auto d-flex justify-content-center gap-2">
                                <a href="@Url.Action("Details", "Product", new { id = item.ProductID })"
                                   class="btn btn-outline-coffee btn-sm fw-bold px-4 py-2">
                                    Xem sản phẩm
                                </a>
                               
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div id="cart-notification" class="alert alert-success text-center position-fixed top-0 start-50 translate-middle-x d-none"
     style="z-index: 1050; width: 300px; margin-top: 20px; border-radius: 12px;">
    🛒 Sản phẩm đã được thêm vào giỏ hàng!
</div>

@section styles {
    <style>
        .text-coffee {
            color: #6b4226;
        }

        .btn-coffee {
            background: linear-gradient(145deg, #6b4226, #4d2c18);
            color: #fff;
            border-radius: 12px;
            font-weight: 600;
            box-shadow: 0 4px 8px rgba(107, 66, 38, 0.4);
            transition: all 0.3s ease;
        }
        .btn-coffee:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 16px rgba(107, 66, 38, 0.6);
        }

        .btn-outline-coffee {
            color: #6b4226;
            border: 2px solid #6b4226;
            border-radius: 12px;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .btn-outline-coffee:hover {
            background-color: #6b4226;
            color: #fff;
            transform: translateY(-3px);
        }

        .product-img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            transition: transform 0.4s ease-in-out, filter 0.4s ease;
            border-bottom: 1px solid #eee;
        }
        .product-img:hover {
            transform: scale(1.08);
            filter: brightness(1.05);
        }

        .product-card {
            transition: all 0.3s ease;
            border-radius: 16px;
        }
        .product-card:hover {
            transform: translateY(-6px);
            box-shadow: 0px 15px 25px rgba(0, 0, 0, 0.2);
        }

        @@media (max-width: 576px) {
            .product-img {
                height: 180px;
            }
            .btn-coffee, .btn-outline-coffee {
                font-size: 0.9rem;
                padding: 0.5rem 0.8rem;
            }
        }
    </style>
}

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".btn-add-to-cart").click(function () {
                var button = $(this);
                var productId = button.data("productid");

                button.prop("disabled", true).text("⏳ Đang xử lý...");

                $.ajax({
                    url: "@Url.Action("AddToCart", "Cart")",
                    type: "POST",
                    data: { productId: productId },
                    success: function (response) {
                        if (response.success) {
                            $("#cart-notification").removeClass("d-none").fadeIn().delay(1200).fadeOut();
                        } else if (response.redirectUrl) {
                            window.location.href = response.redirectUrl;
                        } else {
                            alert("❌ Lỗi khi thêm vào giỏ hàng!");
                        }
                    },
                    error: function () {
                        alert("❌ Lỗi khi thêm vào giỏ hàng!");
                    },
                    complete: function () {
                        button.prop("disabled", false).text("🛍 Mua ngay");
                    }
                });
            });
        });
    </script>
}
