@model List<Coffee.Models.Order>

<h2>Quản lý đơn hàng</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Đơn Hàng</th>
            <th>Khách Hàng</th>
            <th>Ngày Đặt</th>
            <th>Tổng Tiền</th>
            <th>Phương Thức Thanh Toán</th>
            <th>Trạng Thái</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.User.FullName</td>
                <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.PaymentMethod</td>
                <td>@order.Status</td>
                <td>
                    <a href="@Url.Action("OrderDetails", "Admin", new { id = order.OrderID })" class="btn btn-primary">Chi tiết</a>
                    <a href="@Url.Action("ChangeStatus", "Admin", new { id = order.OrderID, status = "Đã giao" })" class="btn btn-success">Giao hàng</a>
                </td>
            </tr>
        }
    </tbody>
</table>
